<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivDietFoodFood"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />


    <TextView
        android:id="@+id/tvDietFoodTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:text="@string/food_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivDietFoodFood"
        app:layout_constraintTop_toTopOf="@id/ivDietFoodFood" />

    <TextView
        android:id="@+id/tvDietFoodDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text="@string/food_description"
        app:layout_constraintBottom_toBottomOf="@id/ivDietFoodFood"
        app:layout_constraintEnd_toEndOf="@id/tvDietFoodTitle"
        app:layout_constraintStart_toStartOf="@id/tvDietFoodTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDietFoodTitle" />

    <Button
        android:id="@+id/btnDeleteDietFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="@id/tvDietFoodTitle"
        app:layout_constraintTop_toBottomOf="@id/tvDietFoodDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>